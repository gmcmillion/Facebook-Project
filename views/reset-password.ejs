<html>
    <head>
        <title>Reset Password</title>
        <link rel="stylesheet" type="text/css" href="/stylesheets/reset-password.css">
    </head>
    <body>
        <div id="login-nav-bar">
            <a href="/"><img src="/images/fb-logo.png" id="logo"></a>
        </div>
        <div id="reset-password-body">
            <div id="reset-password-body-header">
                <span>Forgot Password?</span>
            </div>
            <div id="form-div">
                <form method="post" action="reset-password/reset">
                    <span id="form-span">Enter your email to reset password</span>
                    <input type="email" id="email" name="email" autocomplete="off" placeholder="e.g., anteater@uci.edu" required></input>
                    <input type=submit id="submit-btn" value="Submit"></input>
                </form>
            </div>
        </div>
    </body>
</html>