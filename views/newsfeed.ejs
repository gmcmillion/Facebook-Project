<html>
    <head>
        <title>News Feed</title>
        <link rel="stylesheet" type="text/css" href="/stylesheets/newsfeed.css">
    </head>
    <body>
        <div id="nav-bar">
            <div id="fb-logo">
                <img src="/images/f-letter.png">
                <form id="add-friends-form">
                    <input type="text" placeholder="Search for friends by email..." id="find-friend-input-box"></input>
                    <input type="submit" value="Find" id="add-friend-btn"></input>
                </form>
            </div>
            <div id="user-profile">
                <a href="/profile-page">
                    <img src=<%- profilepic %>>
                    <span id="profile-name"><%- author %></span>
                </a>
                <div class="dropdown">  
                    <button id="options-drop-down-button">
                        <span id="equals">&equiv;</span>
                    </button>
                    <div id="myDropdown" class="dropdown-content">
                        <a href="#about">Delete Account</a>
                        <a href="#contact">Change Password</a>
                        <a href="/logout">Logout</a>
                    </div>
                </div>
            </div>
        </div>
        <div id="newsfeed">
            <div id="create-a-post">
                <div id="post-header">
                    <img src="/images/pencil.png">
                    <span>Create a Post</npmspan>
                </div>
                <div id="post-body">
                    <img id="create-a-post-profile-pic" src=<%- profilepic %>>
                    <form id="post-form">
                        <input type="text" id="post-input-box" placeholder="What's on your mind, <%- author %>?" autocomplete="off"></input>
                        <input type="submit" value="Post" id="post-submit-btn"></input>
                    </form>        
                </div>
            </div>
            <div id="all-posts">
            </div>
        </div>

        <!-- Dropdown menu for edit/delete posts -->
        <div id="post-dropdown">   
            <button id="edit-post">Edit Post</button>
            <button id="delete-post">Delete Post</button>
        </div>

        <!-- Edit post modal -->
        <div id="myModal" class="modal">
            <!-- Modal content -->
            <div class="modal-content">
                <span class="edit-post-close-btn">&times;</span>
                <div id="modal-left">
                    <img src="/images/post-prof-pic.png">
                    <span id="modal-author"></span>
                </div>
                <form id="modal-post-content">
                    <input type="text" value=""></input>
                    <input type="submit" id="post-edits-btn"></input>
                </form>
            </div>
        </div>

        <!-- Find friends modal -->
        <div id="find-friends-modal" class="modal">
            <!-- Modal content -->
            <div class="find-friend-modal-content">
                <span class="find-friends-close-btn">&times;</span>
            </div>
        </div>

        <script> 
            var id = '<%- id %>';
            var author = '<%- author %>';
            var profilepic = '<%- profilepic %>';
        </script>   
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js" type="text/javascript"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-timeago/1.6.1/jquery.timeago.min.js" type="text/javascript"></script>
        <script src="/javascripts/newsfeed.js"></script>
    </body>
</html>