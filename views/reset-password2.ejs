<html>
    <head>
        <title>Link To Reset Password</title>
        <link rel="stylesheet" type="text/css" href="/stylesheets/reset-password.css">        
    </head>
    <body>
        <div id="login-nav-bar">
            <a href="/"><img src="/images/fb-logo.png" id="logo"></a>
        </div>
        <div id="reset-password-body">
            <div id="reset-password-body-header">
                <span>Reset Password?</span>
            </div>
            <div id="form-div">
                <form method="post" action="./<%- id %>/<%- email %>">
                    <input type=submit id="submit-btn" value="Reset"></input>
                </form>
            </div>
        </div>
    </body>
    <script> 
        var id = '<%- id %>';
        var email = '<%- email %>';
    </script>   
</html>